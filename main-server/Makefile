.PHONY: run build test clean dev install-tools

# Run locally (assumes infrastructure is running)
run-dev:
	@echo "ğŸƒ Running in DEVELOPMENT mode..."
	GO_ENV=development go run .

# Build binary
build:
	@echo "ğŸ”¨ Building main-server..."
	go build -o bin/main-server .

# Run tests
test:
	@echo "ğŸ§ª Running tests..."
	go test -v ./...

# Test with coverage
test-coverage:
	go test -coverprofile=coverage.out ./...
	go tool cover -html=coverage.out -o coverage.html
	@echo "ğŸ“Š Coverage report: coverage.html"

# Clean build artifacts
clean:
	rm -rf bin/
	rm -f coverage.out coverage.html

# Install development tools
install-tools:
	go install github.com/cosmtrek/air@latest
	@echo "âœ… Installed development tools"

# Database operations
db-migrate:
	@echo "ğŸ—ƒï¸  Running migrations..."
	go run . -migrate

db-reset:
	@echo "âš ï¸  Resetting database..."
	docker-compose exec postgres psql -U appuser -d appdb -c "DROP SCHEMA public CASCADE; CREATE SCHEMA public;"
	$(MAKE) db-migrate